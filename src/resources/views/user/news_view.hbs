<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/reset.css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/flickity@2/dist/flickity.min.css"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"
      defer
    ></script>
    <script
      src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"
      defer
    ></script>

    <script
      src="https://kit.fontawesome.com/655396e8e6.js"
      defer
      crossorigin="anonymous"
    ></script>

    <title>Medical Equipment Supply</title>
  </head>
  <body>
    {{>header}}
    <main id="main" class="subpage-main articles-outer-container">
      <div class="container">
        <header class="container-header">
          <h2 class="title">Make your dailies informative.</h2>
          {{!-- <div class="input-field col s6 articles-search">
            <input id="search" type="text" class="validate" />
            <label for="search">Search...</label>
            <a href="#" class="material-icons"> search </a>
          </div> --}}
        </header>
        <div class="articles-container">
          <div class="main-articles-container">
            <div class="section-grid">
              <div class="row">
                {{#each articles}}
                <div class="col s12 m12 l6">
                  <a href="/news/{{this._id}}" class="card">
                    <div class="card-image">
                      <img src="../uploads/{{{this.image}}}" />
                    </div>
                    <div class="card-content">
                      <span class="card-date">{{{convertDate this.createdAt}}}</span>
                      <span class="card-title">{{{this.title}}}</span>
                      <span class="card-brief"
                        >{{{formatLongString this.content}}}</span
                      >
                      <div class="card-author">{{{ this.author}}}</div>
                    </div>
                  </a>
                </div>
               {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    
    </main>
    {{>footer}}
    <script src="./script/main.js"></script>
    <script src="./script/articles.js"></script>
  </body>
</html>
