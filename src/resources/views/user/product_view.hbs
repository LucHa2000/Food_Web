  <body>
{{>header}}
    <main id="main" class="subpage-main products-outer-container">

      <div class="container">
        <h2 class="title">
          We offer high quality products for competitive prices.
        </h2>
        <div class="products-container">
          <div class="left">
            <div class="card" style="min-height: 0vh">
              <div href="#" class="card-content" >
                <span class="card-title">Categories</span>

                
                {{#each lists}}
                  <p>
                    <a href="/goods/{{this._id}}"><h6>{{this.list_name}}</h6></a>
                  </p>
                {{/each}}
              </div>

              <div class="btns-container">
                <a
                  href="/goods"
                  id="btn--view-details"
                  class="btn-active btn"
                >Reset</a>
              </div>
            </div>
          </div>
          <div class="right">
            <section class="section-grid">
              <div class="row">
                {{#each products}}
                  <div class="col s12 m4">
                    <div class="card " style="min-height: 0vh">
                      <a href="#" class="card-content">
                        <div class="card-image"  style="height:30%">
                          <img 
                          
                            src="../uploads/{{{this.image}}}"
                          />
                        </div>
                        <span class="card-tag">NEW</span>
                        <span class="card-title">{{{this.product_name}}}</span>
                        <p>
                          this is note product
                          {{{this.note}}}
                        </p>
                        <span class="card-price">{{{formatLongString
                            (formatCurrency this.unit_price)
                          }}}</span>
                      </a>

                      <div class="btns-container">
                        <a
                          href="/cart/{{{this._id}}}"
                          id="btn--add-to-cart"
                          class="btn-active btn"
                        >Add to cart</a>
                        <a 
                          href="/{{this.product_name}}"
                          id="btn--view-details"
                          class="btn-inactive btn waves-effect waves-light btn modal-trigger show_detail"
                        >Details</a>
                      </div>
                    </div>
                  </div>
                {{/each}}
              </div>
            </section>
            <ul class="pagination center">
              <li class="disabled">
                <a href="#!"><i class="material-icons">chevron_left</i></a>
              </li>
              <li class="btn-active"><a href="#!" class="white-text">1</a></li>
              <li class="waves-effect"><a href="#!">2</a></li>
              <li class="waves-effect"><a href="#!">3</a></li>
              <li class="waves-effect"><a href="#!">4</a></li>
              <li class="waves-effect"><a href="#!">5</a></li>
              <li class="waves-effect">
                <a href="#!"><i class="material-icons">chevron_right</i></a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <footer class="page-footer">
        <div class="container">
          <div class="row">
            <div class="col l4 s12">
              <p class="footer-title">Shop</p>
              <ul>
                <li><a class="" href="#!">Mask</a></li>
                <li><a class="" href="#!">Handwash</a></li>
                <li><a class="" href="#!">Automation</a></li>
              </ul>
            </div>
            <div class="col l4 s12">
              <p class="footer-title">News</p>
              <ul>
                <li><a class="" href="#!">Lastest News</a></li>
                <li><a class="" href="#!">Coronavirus</a></li>
                <li><a class="" href="#!">Vaccine</a></li>
              </ul>
            </div>
            <div class="col l4 s12">
              <p class="footer-title">About Medicale</p>
              <ul>
                <li><a class="" href="#!">Our team</a></li>
                <li><a class="" href="#!">Contact Us</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="footer-copyright">
          <div class="container">Â© 2021 Copyright by Nhan Dang</div>
        </div>
      </footer>

    </main>
