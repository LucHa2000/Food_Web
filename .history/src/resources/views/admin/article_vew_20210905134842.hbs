{{>header_admin}}
 
<div class="create-container">
    <div class="container">

  <table class="centered responsive-table right highlight" >
        <thead>
          <tr>           
            <th>No</th>   
            <th>Title</th>
            <th>Image</th>
            <th>Status</th>
            <th>Author</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
     
              {{#each articles}}
          <tr>
            <td>{{sum @index}}</td>
             <td>{{{this.title}}}</td>
            <td>{{{this.image}}}</td>
            <td>{{{ this.author}}}</td>
              <td>{{{ status this.article_status}}}</td>
             <td><a href="/article/{{{this.article_status}}}/{{{this._id}}}" class="btn btn-small  blue lighten-2 ">{{btnStatus this.article_status}}</a></td>
            <td><a href="/article/{{{this._id}}}" class="btn btn-small red lighten-1 ">Update</a> </td>
             <td><a onclick="return confirm('Are You Sure Delete ?')" href="/account/{{{this._id}}}" class="btn btn-small red lighten-1 ">Delete</a> </td>
          
          </tr>
            {{/each}}
          

      
          
        </tbody>
      </table> 
    </div>
  </div>



  